<link rel='stylesheet' href='/stylesheets/style.css' />

<body>
<a href="/flights/new">New Flight</a>
<a href="/flights">All Flights</a>
<br>
<h2>Flight List</h2>
<table>
  <thead>
    <tr>
      <th>Airline</th>
      <th>Airport</th>
      <th>Flight Number</th>
      <th>Departs</th>
    </tr>
  </thead>
  <tbody>
    <% flightDocs.forEach(function(f) { %> <!-- Write the line of EJS to iterate over movies using forEach -->
      <tr>
        <td><%= f.airline %></td>
        <td><%= f.airport %></td>
        <td><%= f.flightNo %></td>
        <td><%= f.departs %></td>
        <td><a href="/flights/<%= f._id %>">DETAILS</a></td>
      </tr>
      <% }) %> <!-- Close the forEach using EJS here -->
  </tbody>
</table>
</body>